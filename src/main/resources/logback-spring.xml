<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="LOG_FILE" value="${LOG_PATH:-./logs}/manager-user-security.log"/>
    
    <!-- Appender para console com saída colorida -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    
    <!-- Appender para arquivo de log -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    
    <!-- Appender JSON para integrações com ferramentas como DataDog -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH:-./logs}/manager-user-security-json.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH:-./logs}/manager-user-security-json.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>sessionId</includeMdcKeyName>
            <includeMdcKeyName>tenantId</includeMdcKeyName>
            <includeMdcKeyName>category</includeMdcKeyName>
            <includeMdcKeyName>severity</includeMdcKeyName>
        </encoder>
    </appender>
    
    <!-- Configurações específicas por pacote -->
    <logger name="com.ocoelhogabriel.manager_user_security" level="INFO" />
    
    <!-- Logs de segurança sempre em nível INFO ou mais alto -->
    <logger name="com.ocoelhogabriel.manager_user_security.config" level="INFO" />
    <logger name="com.ocoelhogabriel.manager_user_security.utils.JWTUtil" level="INFO" />
    <logger name="com.ocoelhogabriel.manager_user_security.utils.logging" level="INFO" />
    
    <!-- Logs de spring security -->
    <logger name="org.springframework.security" level="INFO" />
    
    <!-- Logs de acesso HTTP -->
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="INFO" />
    
    <!-- Configuração raiz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="JSON_FILE" />
    </root>
</configuration>